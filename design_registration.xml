<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20sp"
        tools:ignore="hardcodetext">

    <TextView
        android:id="@+id/text1"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="90dp"
        android:text="Sign_UP_Account"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="140dp"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="Enter FirstName"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp" />

        <EditText
            android:id="@+id/edit7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="140dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:hint="Enter LastName"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp" />

        <EditText
        android:id="@+id/edit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="130dp"
        android:hint="Enter Email"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:layout_below="@+id/edit7"
        />
    <EditText
        android:id="@+id/edit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="156dp"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="PhoneNumber"
        android:inputType="phone"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
      android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edit3"
        android:text="select DOB :"
        android:textColor="@color/black"
        android:textSize="20sp"/>


    <EditText
        android:id="@+id/edit6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="-40dp"/>
    <TextView
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:drawableLeft="@drawable/ic_baseline_language_24"
        android:drawablePadding="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edit6"
        android:text="select language :"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select"
        android:layout_marginTop="-30dp"
        android:layout_marginStart="220dp"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:hint="select language:"
        android:textColor="@color/white"
        android:textColorHint="@color/black"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edit4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="156dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="20sp"/>


        <EditText
            android:id="@+id/edit5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit4"
            android:layout_marginStart="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="156dp"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="10dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit5"
            android:layout_marginStart="26dp"
            android:layout_marginTop="9dp"
            android:drawableLeft="@drawable/ic_baseline_image_24"
            android:drawablePadding="10dp"
            android:text="pick Image"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="184dp"
            android:layout_height="79dp"
            android:layout_below="@+id/accept"
            android:layout_centerInParent="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="-46dp" />

        <Button
                    android:id="@+id/camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/accept"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="@color/teal_700"
                    android:onClick="pick_up_camera"
                    android:text="Camera"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/Gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/camera"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="-50dp"
                    android:backgroundTint="@color/teal_700"
                    android:onClick="pick_up_gallery"
                    android:text="Gallery"
                    android:textColor="@color/black" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/registerbtn"
            android:layout_width="235dp"
            android:layout_height="71dp"
            android:layout_below="@id/edit5"
            android:layout_marginStart="60dp"
            android:layout_marginTop="132dp"
            android:layout_marginEnd="156dp"
            android:backgroundTint="@color/teal_700"
            android:padding="10dp"
            android:text="Register"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/createtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/registerbtn"
            android:layout_marginStart="50dp"
            android:layout_marginTop="0dp"
            android:text="Already Account ? Login here "
            android:textColor="@color/black"
            android:textSize="17dp" />

    </RelativeLayout>
</ScrollView>
